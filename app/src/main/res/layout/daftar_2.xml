<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="304dp" android:layout_height="wrap_content"
    android:background="@color/bgcolor"
    android:layout_centerHorizontal="true">

    <ImageView
        android:id="@+id/img_daftar2"
        android:layout_width="153dp"
        android:layout_height="153dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_daftar2"
        />

    <TextView
        android:id="@+id/txt1Daftar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_daftar2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Congratulation"
        android:textSize="18dp"
        android:fontFamily="@font/psemibold"
        />

    <TextView
        android:id="@+id/txt2Daftar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1Daftar2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Get ready with Gerak application"
        android:textSize="12dp"
        android:textAlignment="center"
        android:fontFamily="@font/pmedium"
        />

    <Button
        android:id="@+id/btnContinue_daftar1"
        android:layout_width="272dp"
        android:layout_height="49dp"
        android:layout_below="@id/txt2Daftar1"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/pmedium"
        android:background="@drawable/getstarted_bgbutton"
        android:onClick="home"
        />
</RelativeLayout>