<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/bg">

    <RelativeLayout
        android:id="@+id/headFeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/psemibold"
            android:text="Jelajahi Informasi"
            android:textSize="20dp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/subJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="84dp"
            android:layout_marginLeft="30dp"
            android:text="Terkini dan terlengkap"
            android:textSize="14dp"
            android:fontFamily="@font/preguler"
            android:textColor="#fff"/>

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/subJudul"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edittext_daftar1"
            />

        <ImageView
            android:id="@+id/gambar3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/profile" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_dompetgerak_home"
        android:layout_below="@id/headFeed">

        <ListView
            android:id="@+id/listJanji"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <!--Start of Nav-->
    <RelativeLayout
        android:id="@+id/relativelayout3_home"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_menu_bawah">

        <ImageButton
            android:id="@+id/btnChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_passive"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            />

        <TextView
            android:id="@+id/txtChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnChat"
            android:layout_marginTop="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:text="Chat"
            android:textSize="12dp"
            android:fontFamily="@font/pbold"
            android:textColor="#A5A5A5"
            />

        <ImageButton
            android:id="@+id/btnJanji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/janji_passive"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/btnChat"
            android:layout_marginLeft="100dp"
            />

        <TextView
            android:id="@+id/txtJanji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnJanji"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/txtChat"
            android:layout_marginLeft="85dp"
            android:layout_centerVertical="true"
            android:text="Buat Janji"
            android:textSize="12dp"
            android:fontFamily="@font/pbold"
            android:textColor="#A5A5A5"
            />


        <ImageButton
            android:id="@+id/btnFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/feed_active"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            />

        <TextView
            android:id="@+id/txtAkun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnFeed"
            android:layout_marginTop="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="56dp"
            android:text="Article"
            android:textSize="12dp"
            android:fontFamily="@font/pbold"
            android:textColor="#374E4E"
            />

    </RelativeLayout>
    <!--End of Nav-->

</RelativeLayout>
