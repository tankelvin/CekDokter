<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/gbrArticle"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/kontak" />
    <TextView
        android:id="@+id/jdlArticle"
        android:layout_below="@id/gbrArticle"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/pmedium"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:text="Jenis-jenis Pemeriksaan Mata yang Perlu Anda Ketahui"/>
</RelativeLayout>