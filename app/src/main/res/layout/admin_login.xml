<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/bg">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CEK DOKTER"
        android:textSize="30dp"
        android:fontFamily="@font/psemibold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:textColor="#fff"
        />

    <ImageView
        android:id="@+id/gambar1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/judul"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:background="@drawable/dokter" />

    <EditText
        android:id="@+id/emailLoginadmin"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/gambar1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/edittext_daftar1"
        android:hint="Masukkan Email"
        android:paddingStart="8dp"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/passwordLoginadmin"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20px"
        android:layout_marginEnd="40dp"
        android:hint="Password"
        android:paddingStart="8dp"
        android:layout_below="@id/emailLoginadmin"
        android:background="@drawable/edittext_daftar1"/>

    <Button
        android:id="@+id/btnLoginadmin"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="248dp"
        android:layout_marginTop="32px"
        android:layout_marginEnd="40dp"
        android:layout_below="@id/passwordLoginadmin"
        android:text="Login"
        android:background="@drawable/bg_dompetgerak_home"/>






</RelativeLayout>