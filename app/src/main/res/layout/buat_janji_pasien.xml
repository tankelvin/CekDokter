<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/headerChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_menu_bawah">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="22dp"
            android:fontFamily="@font/pbold"
            android:textSize="18dp"
            android:text="ISI DATA PASIEN"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/data_pasien"
        android:layout_below="@id/headerChat"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/preguler"
        android:textSize="16dp"
        android:text="Selesaikan registrasui anda dengan
        mengisi data dibawah ini"
        android:textAlignment="center"/>

    <RelativeLayout
        android:id="@+id/data1"
        android:layout_below="@id/data_pasien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dompetgerak_home"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >
        <EditText
            android:id="@+id/noktp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:fontFamily="@font/preguler"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:hint="No KTP Pasien"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/data2"
        android:layout_below="@id/data1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dompetgerak_home"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:fontFamily="@font/preguler"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:hint="Alamat sesuai KTP Pasien"
            android:ems="10"
            />

    </RelativeLayout>

    <Button
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/data2"
        android:background="@color/orange"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="13dp"
        android:text="Kirim"
        android:textColor="@color/white"/>
</RelativeLayout>