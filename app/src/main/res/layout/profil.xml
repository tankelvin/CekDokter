<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_menu_bawah"
        >
        <RelativeLayout
            android:id="@+id/layout_profil"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/lingkaran">

            <ImageView
                android:id="@+id/fotodokter"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_account_profile">

            </ImageView>

        </RelativeLayout>
        <TextView
            android:id="@+id/namauser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@id/layout_profil"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/pbold"
            android:textSize="14dp"
            android:text="Tan Kelvin">
        </TextView>

        <TextView
            android:id="@+id/telpon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/namauser"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/preguler"
            android:textSize="12dp"
            android:text="0812-7770-1234"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/akun"
        android:layout_width="wrap_content"
        android:layout_height="157dp"
        android:layout_below="@id/user"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_dompetgerak_home">

        <TextView
            android:id="@+id/judulakun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/psemibold"
            android:text="Akun"
            android:textSize="14dp" />
        <!--Menu Akun 1-->
        <ImageView
            android:id="@+id/g1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/judulakun"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/ic_garis_akun" />


        <TextView
            android:id="@+id/txtAccount_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/g1"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/pmedium"
            android:layout_marginStart="22dp"
            android:text="Profil Saya"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/g1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="26dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/ic_panah_akun" />

        <!--Menu Akun 2-->
        <ImageView
            android:id="@+id/g2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtAccount_profile"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/ic_garis_akun" />


        <TextView
            android:id="@+id/txtUbah_sandi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/g2"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="21dp"
            android:layout_marginStart="22dp"
            android:fontFamily="@font/pmedium"
            android:text="Ubah Kata Sandi"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/g2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="26dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/ic_panah_akun"

            />
    </RelativeLayout>





    <RelativeLayout
        android:id="@+id/AktivtasSaya"
        android:layout_width="wrap_content"
        android:layout_height="157dp"
        android:layout_below="@id/akun"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_dompetgerak_home">

        <TextView
            android:id="@+id/AS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/psemibold"
            android:text="Aktivitas Saya"
            android:textSize="14dp" />

        <!--Menu Akun 1-->
        <ImageView
            android:id="@+id/g3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/AS"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/ic_garis_akun" />


        <TextView
            android:id="@+id/txtRekam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/g3"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/pmedium"
            android:layout_marginStart="22dp"
            android:text="Rekam Medis"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/g3"
            android:layout_alignParentRight="true"
            android:layout_marginTop="26dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/ic_panah_akun" />

        <!--Menu Akun 2-->
        <ImageView
            android:id="@+id/g4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtRekam"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/ic_garis_akun" />


        <TextView
            android:id="@+id/txtTransaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/g4"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="21dp"
            android:layout_marginStart="22dp"
            android:fontFamily="@font/pmedium"
            android:text="Transaksi Saya"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/g4"
            android:layout_alignParentRight="true"
            android:layout_marginTop="26dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/ic_panah_akun"

            />


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/app_cekdokter"
        android:layout_width="wrap_content"
        android:layout_height="157dp"
        android:layout_below="@id/AktivtasSaya"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_dompetgerak_home">

        <TextView
            android:id="@+id/AC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/psemibold"
            android:text="Aplikasi Cekdokter"
            android:textSize="14dp" />


        <!--Menu Akun 1-->
        <ImageView
            android:id="@+id/g5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/AC"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/ic_garis_akun" />


        <TextView
            android:id="@+id/txtTentang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/g5"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/pmedium"
            android:layout_marginStart="22dp"
            android:text="Tentang Cekdokter"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/g5"
            android:layout_alignParentRight="true"
            android:layout_marginTop="26dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/ic_panah_akun" />

        <!--Menu Akun 2-->
        <ImageView
            android:id="@+id/g6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTentang"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/ic_garis_akun" />

        <TextView
            android:id="@+id/txtKontak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/g6"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/pmedium"
            android:layout_marginStart="22dp"
            android:text="Kontak"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/g6"
            android:layout_alignParentRight="true"
            android:layout_marginTop="26dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/ic_panah_akun" />

    </RelativeLayout>


</RelativeLayout>