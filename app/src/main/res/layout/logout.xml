<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="304dp" android:layout_height="wrap_content"
    android:background="@color/bgcolor"
    android:layout_centerHorizontal="true">

    <ImageView
        android:id="@+id/img_logout"
        android:layout_width="153dp"
        android:layout_height="153dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_keluar"
        />

    <TextView
        android:id="@+id/txt1Daftar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_logout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Logout"
        android:textSize="18dp"
        android:fontFamily="@font/psemibold"
        />

    <TextView
        android:id="@+id/txt2Daftar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1Daftar2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Thank you for using gerak"
        android:textSize="12dp"
        android:textAlignment="center"
        android:fontFamily="@font/pmedium"
        />

    <Button
        android:id="@+id/btnLogout_logout"
        android:layout_width="272dp"
        android:layout_height="49dp"
        android:layout_below="@id/txt2Daftar1"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true"
        android:text="Keluar"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/pmedium"
        android:background="@drawable/getstarted_bgbutton"
        android:onClick="home"
        />

    <Button
        android:id="@+id/btnCancel_logout"
        android:layout_width="272dp"
        android:layout_height="49dp"
        android:layout_below="@id/btnLogout_logout"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:background="@drawable/transparent"
        android:text="Batal"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:textColor="#374E4E"
        android:fontFamily="@font/pmedium"
        android:onClick="home"
        />

</RelativeLayout>