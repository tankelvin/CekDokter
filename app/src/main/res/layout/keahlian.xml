<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:scrollbars="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--Background Keahlian-->
    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_bg_keahlian"
        />

    <!--Button Back Profile-->
    <ImageButton
        android:id="@+id/btnBack_keahlian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp"
        android:background="@drawable/ic_back_profile"
        android:onClick="home"
        />

    <!--Layout Judul-->
    <RelativeLayout
        android:id="@+id/layout_judul_keahlian"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_help1_help"
        >

        <ImageView
            android:id="@+id/imgJudul_keahlian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="28dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/ic_judul_keahlian"
            />

        <EditText
            android:id="@+id/tbJudul_keahlian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36.5dp"
            android:layout_toEndOf="@id/imgJudul_keahlian"
            android:layout_marginLeft="8dp"
            android:hint="Judul Pekerjaan"
            android:textSize="16dp"
            android:fontFamily="@font/pmedium"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tbJudul_keahlian"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36.5dp"
            android:layout_toEndOf="@id/imgJudul_keahlian"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="25dp"
            android:hint=" + Deskripsi"
            android:textSize="16dp"
            android:fontFamily="@font/preguler"
            />

    </RelativeLayout>
    <!--Tutup Layout Judul-->

    <!--Layout Keahlian-->
    <RelativeLayout
        android:id="@+id/layout_keahlian_keahlian"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_judul_keahlian"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_help1_help"
        >

        <ImageView
            android:id="@+id/imgKeahlian_keahlian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_pilihkeahlian_keahlian"
            />

        <Spinner
            android:id="@+id/spinner_keahlian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/imgKeahlian_keahlian"
            android:layout_marginLeft="8dp"
            android:entries="@array/valueKeahlian"
            android:prompt="@string/keahlian"
            />

    </RelativeLayout>
    <!--Tutup Layout Keahlian-->

    <!--Layout Waktu-->
    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_keahlian_keahlian"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_help1_help"
        >

        <ImageView
            android:id="@+id/imgTanggal_keahlian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="28dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/ic_tanggal_keahlian"
            />

        <EditText
            android:id="@+id/tbTanggal_keahlian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36.5dp"
            android:layout_toEndOf="@id/imgTanggal_keahlian"
            android:layout_marginLeft="8dp"
            android:hint="Tanggal Pekerjaan Dimulai"
            android:textSize="16dp"
            android:fontFamily="@font/pmedium"
            />

        <ImageView
            android:id="@+id/imgJam_keahlian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgTanggal_keahlian"
            android:layout_marginTop="32dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/ic_jam_keahlian"
            />

        <EditText
            android:id="@+id/tbJam_keahlian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tbTanggal_keahlian"
            android:layout_marginTop="11dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36.5dp"
            android:layout_toEndOf="@id/imgJam_keahlian"
            android:layout_marginLeft="8dp"
            android:hint="Jam"
            android:textSize="16dp"
            android:fontFamily="@font/pmedium"
            android:layout_marginBottom="25dp"
            />

    </RelativeLayout>
    <!--Tutup Layout Keahlian-->

    <Button
        android:id="@+id/btnBatal_keahlian"
        android:layout_width="304dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:text="Batal"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:textColor="#374E4E"
        android:fontFamily="@font/pmedium"
        android:background="@drawable/transparent"
        android:onClick="home"
        />

    <Button
        android:id="@+id/btnPosting_keahlian"
        android:layout_width="304dp"
        android:layout_height="49dp"
        android:layout_above="@id/btnBatal_keahlian"
        android:background="@drawable/getstarted_bgbutton"
        android:layout_marginBottom="24dp"
        android:layout_centerHorizontal="true"
        android:text="Posting"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/pmedium"
        />


</ScrollView>
</RelativeLayout>